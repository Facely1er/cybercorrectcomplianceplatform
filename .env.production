# Production Environment Configuration
# Copy this file to .env.local and update with your production values

# Application
NODE_ENV=production
VITE_APP_VERSION=2.0.0

# Authentication & Security
VITE_AUTH_PROVIDER=supabase
VITE_JWT_SECRET=your-super-secure-jwt-secret-key-here
VITE_SESSION_TIMEOUT=28800000
VITE_SECURE_COOKIES=true
VITE_ENABLE_CSP=true

# Database (Supabase)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Monitoring & Analytics
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_ANALYTICS_ID=your-analytics-id

# API Configuration
VITE_API_BASE_URL=https://your-api-domain.com/api
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ADVANCED_FEATURES=true
VITE_ENABLE_MULTI_TENANT=false

# Security Headers
VITE_ENABLE_HSTS=true
VITE_ENABLE_CONTENT_TYPE_OPTIONS=true
VITE_ENABLE_FRAME_OPTIONS=true
VITE_ENABLE_XSS_PROTECTION=true

# Performance
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true
VITE_CDN_URL=https://your-cdn-domain.com