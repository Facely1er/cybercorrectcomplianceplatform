{
  "name": "cybersecurity-compliance-platform",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Comprehensive Cybersecurity compliance platform with assessment, evidence collection, and certification readiness monitoring",
  "keywords": [
    "cmmc",
    "dod",
    "cybersecurity",
    "certification",
    "compliance",
    "assessment",
    "cui"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "vercel-build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "analyze": "npx vite-bundle-analyzer",
    "type-check": "tsc --noEmit",
    "perf:lighthouse": "lighthouse http://localhost:4173 --output=html --output-path=./reports/lighthouse.html",
    "perf:build-size": "npm run build && bundlesize",
    "perf:load-test": "artillery quick --count 10 --num 50 http://localhost:4173",
    "test:a11y": "axe --react",
    "audit:security": "npm audit && npm run test:security",
    "audit:wcag": "axe-core --tags wcag2a,wcag2aa",
    "test:security": "vitest run --config vitest.security.config.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@supabase/supabase-js": "^2.53.0",
    "@types/node": "^24.1.0",
    "@vercel/analytics": "^1.5.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "dompurify": "^3.2.6",
    "jose": "^6.0.12",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.7.0",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/js": "^9.9.1",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "artillery": "^2.0.21",
    "autoprefixer": "^10.4.18",
    "bundlesize": "^0.18.2",
    "eslint": "^9.9.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "lighthouse": "^12.8.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.43.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/index-*.js",
      "maxSize": "1000kb"
    },
    {
      "path": "./dist/assets/vendor-*.js",
      "maxSize": "200kb"
    },
    {
      "path": "./dist/assets/charts-*.js",
      "maxSize": "250kb"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "100kb"
    }
  ]
}
